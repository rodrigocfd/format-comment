{
	"name": "format-comment",
	"displayName": "Format Comment",
	"description": "Formats comments to fit a maximum number of chars on each line.",
	"version": "0.0.7",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Formatters"
	],
	"license": "MIT",
	"publisher": "rodrigocfd",
	"repository": {
		"url": "https://github.com/rodrigocfd/format-comment.git",
		"type": "git"
	},
	"activationEvents": [
		"onCommand:format-comment.formatComment"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "format-comment.formatComment",
				"title": "Format Comment"
			}
		],
		"configuration": {
			"title": "Settings",
			"properties": {
				"format-comment.settings.maxLength": {
					"type": "number",
					"default": 80,
					"description": "Maximum length of the comment line."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.23",
		"eslint": "^8.12.0",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.6.3",
		"@vscode/test-electron": "^2.2.0",
		"ts-loader": "^9.2.8",
		"webpack": "^5.71.0",
		"webpack-cli": "^4.9.2"
	}
}
